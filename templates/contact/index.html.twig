{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<header class="masthead">
		<div class="container px-4 px-lg-5 h-100">
			<div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
				<div class="col-lg-8 align-self-end">
					<h1 class="text-white font-weight-bold">Contact</h1>
					<hr class="divider"/>
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{message}}
						</div>
					{% endfor %}
				</div>
				<div class="col-lg-8 align-self-baseline text-white">
					{{ form_start(form) }}
					<div class="row ">
						<div class="col m-1">{{ form_row(form.lastname) }}</div>
						<div class="col m-1">{{ form_row(form.firstname) }}</div>
					</div>
					<div class="row">
						<div class="col m-1">{{ form_row(form.phone) }}</div>
						<div class="col m-1">{{ form_row(form.email) }}</div>
					</div>
					{{ form_rest(form) }}
					{{ form_end(form) }}

				</div>
			</div>
		</div>
	</header>
{% endblock %}
