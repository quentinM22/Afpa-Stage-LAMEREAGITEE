{% extends 'base.html.twig' %}

{% block title %}Presses / Evènements / ...
{% endblock %}


{% block body %}
	<section class="page-section bg-primary" id="about">
		<div class="container px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-lg-8 text-center">
					<h2 class="text-white mt-0">Presses / Evènements / ...</h2>
					<hr class="divider divider-light"/>
				</div>
			</div>
		</div>
	</section>
	{% include "base/search.html.twig" %}
	<div id="portfolio">
		<div class="container-fluid p-0">
			<div class="row g-0">
				{% for press in presses %}
					<div class="col-lg-3 col-sm-6">
						<a class="portfolio-box" href="{{ press.url }}">
							{% if  press.imageName ==  null %}
								<img class="img-fluid" src="{{'/images/front/si_tu_savais.jpg' | imagine_filter('miniature')}} " alt="...">
							{% else %}
								<img class="img-fluid" src="{{ vich_uploader_asset(press, 'imageFile') | imagine_filter('miniature')}}" alt="..."/>
							{% endif %}
							<div class="portfolio-box-caption">
								<div class="project-name">{{press.title}}</div>
								<div class="project-category text-white-40">{{press.description | nl2br}}</div>
								<br>
								<div class="project-category text-white-50">Cliquez pour Accèder à l'information</div>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
			<div class="pagination mt-4 justify-content-center">
				{{ knp_pagination_render(presses) }}
			</div>
		</div>
	{% endblock %}
